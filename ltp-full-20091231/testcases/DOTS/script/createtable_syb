set -x
isql -Usa -Ppassword -Ssybase  <<EOI

use testdb
go

DROP TABLE BASIC1
go
DROP TABLE BASIC2
go
DROP TABLE BASIC3
go
DROP TABLE BASIC4
go
DROP TABLE BASIC5
go
DROP TABLE BASIC6
go
DROP TABLE BID
go
DROP TABLE ITEM
go
DROP TABLE REGISTRY
go

CREATE TABLE BASIC1 (ID_1 CHAR(15), RND_CHAR VARCHAR(50) null, RND_FLOAT FLOAT null, PRIMARY KEY CLUSTERED(ID_1))
go
CREATE TABLE BASIC2 (ID_2 CHAR(15), RND_INTEGER INT null, RND_TIME DATETIME null, RND_DATE DATETIME null, PRIMARY KEY CLUSTERED(ID_2))
go
CREATE TABLE BASIC3 (ID_1 CHAR(15), ID_2 CHAR(15) , RND_TIMESTAMP DATETIME null, RND_INT INT null, PRIMARY KEY CLUSTERED(ID_1,ID_2))
go
CREATE TABLE BASIC4 (ID_4 CHAR(15), NAME VARCHAR(30), AGE INT, SALARY FLOAT, HIREDATE DATETIME, DEPTNO INTEGER, PRIMARY KEY CLUSTERED(ID_4))
go
CREATE TABLE BASIC5 (ID_5 CHAR(15), NAME VARCHAR(30), AGE INT, SALARY FLOAT, DOC TEXT, PRIMARY KEY CLUSTERED(ID_5))
go
CREATE TABLE BASIC6 (ID_6 CHAR(15), NAME VARCHAR(30), AGE INT, SALARY FLOAT, PHOTO IMAGE, PRIMARY KEY CLUSTERED(ID_6))
go
CREATE TABLE REGISTRY (USERID CHAR(15), PASSWD CHAR(10) ,ADDRESS CHAR(200), EMAIL CHAR(40), PHONE CHAR(15),PRIMARY KEY CLUSTERED(USERID))
go
CREATE TABLE ITEM (ITEMID CHAR(15),SELLERID CHAR(15),DESCRIPTION VARCHAR(500),BID_PRICE FLOAT,START_TIME DATETIME,END_TIME DATETIME,BID_COUNT INT,PRIMARY KEY CLUSTERED(ITEMID))
go
CREATE TABLE BID (ITEMID CHAR(15),BIDERID CHAR(15),BID_PRICE FLOAT,BID_TIME DATETIME,CONSTRAINT ITEM_DETAIL_CONSTR FOREIGN KEY(ITEMID) REFERENCES ITEM (ITEMID))
EOI
